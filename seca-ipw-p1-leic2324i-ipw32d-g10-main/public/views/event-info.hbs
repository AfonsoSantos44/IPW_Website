    header {
        background: #343a40;
        color: white;
        padding: 20px;
        text-align: center;
    }

    section {
        max-width: 600px;
        margin: 20px auto;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    article {
        margin-bottom: 20px;
    }

    h3 {
        color: #343a40;
    }

    p {
        margin: 0;
    }

    .return-button {
        margin-top: 20px;
    }
