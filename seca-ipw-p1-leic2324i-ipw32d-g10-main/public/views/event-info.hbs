
<header>
    <h1>Event Info</h1>
</header>

<section>
    <article>
        <h3>Event Name:</h3>
        <p>{{name}}</p>
    </article>

    <article>
        <h3>Sales start:</h3>
        <p>{{salesStart}}</p>
    </article>

    <article>
        <h3>Sales end:</h3>
        <p>{{salesEnd}}</p>
    </article>

    <article>
        <h3>Event date:</h3>
        <p>{{eventStart}}</p>
    </article>

    <article>
        <h3>Segment:</h3>
        <p>{{segment}}</p>
    </article>

    <article>
        <h3>Genre:</h3>
        <p>{{genre}}</p>
    </article>

    <article>
        <h3>subGenre:</h3>
        <p>{{subGenre}}</p>
    </article>

    <!-- Return to Main Page button -->
    <button class="btn btn-secondary return-button" id="event-info-to-main">Return to Main Page</button>
</section>

